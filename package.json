{
	"name": "calisto-studio",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "NODE_OPTIONS='--inspect=localhost:9222' vite dev --host ",
		"dev:remote": "wrangler dev --remote",
		"wasm": "wasm-pack build converter --target=web --out-dir ../src/lib/wasm && rm src/lib/wasm/.gitignore",
		"build": "vite build",
		"preview": "pnpm run build && wrangler dev",
		"preview:staging": "pnpm run build && wrangler deploy --env=staging",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"deploy": "pnpm payload-typegen && git push origin main",
		"deploy:staging": "PUBLIC_DEV_CMS=https://staging-cms.calisto.studio vite build && wrangler deploy --env=staging",
		"payload-typegen": "cp ../cms-mt/src/payload-types.ts ./src/payload-types.ts",
		"cf-typegen": "wrangler types && mv worker-configuration.d.ts src/",
		"update-kv": "wrangler kv bulk put blobs/data.json --local --binding CALISTO_STUDIO_KV_CACHE --preview"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20260128.0",
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.2",
		"@internationalized/date": "^3.10.1",
		"@lucide/svelte": "^0.515.0",
		"@sveltejs/adapter-auto": "^6.1.1",
		"@sveltejs/adapter-cloudflare": "^7.2.6",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/lodash-es": "^4.17.12",
		"bits-ui": "^2.15.4",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^16.5.0",
		"mode-watcher": "^1.1.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.45.4",
		"svelte-check": "^4.3.5",
		"svelte-sonner": "^1.0.7",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^6.4.1",
		"wrangler": "^4.61.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": ["esbuild"]
	},
	"dependencies": {
		"@motionone/types": "^10.17.1",
		"@payloadcms/graphql": "^3.73.0",
		"@payloadcms/live-preview": "^3.73.0",
		"@payloadcms/richtext-lexical": "^3.73.0",
		"@tanstack/svelte-form": "^1.28.0",
		"@types/lodash": "^4.17.23",
		"clsx": "^2.1.1",
		"embla-carousel-fade": "^8.6.0",
		"embla-carousel-svelte": "^8.6.0",
		"fflate": "^0.8.2",
		"iconify-icon": "^3.0.2",
		"lexical": "^0.31.2",
		"lodash-es": "^4.17.23",
		"lucide": "^0.503.0",
		"motion": "^12.29.2",
		"next": "15.4.8"
	}
}
