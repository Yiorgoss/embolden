{
	"name": "calisto-studio",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "NODE_OPTIONS='--inspect=localhost:9222' vite dev --host ",
		"dev:remote": "wrangler dev --remote",
		"build": "vite build",
		"preview": "pnpm run build && wrangler dev",
		"preview:staging": "pnpm run build && wrangler deploy --env=staging",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"deploy": "#wrangler deploy",
		"deploy:staging": "PUBLIC_DEV_CMS=https://staging-cms.calisto.studio vite build && wrangler deploy --env=staging",
		"cf-typegen": "wrangler types && mv worker-configuration.d.ts src/",
		"update-kv": "wrangler kv bulk put blobs/data.json --local --binding CALISTO_STUDIO_KV_CACHE --preview"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250430.0",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@internationalized/date": "^3.8.2",
		"@lucide/svelte": "^0.515.0",
		"@sveltejs/adapter-auto": "^6.1.1",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/lodash-es": "^4.17.12",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"mode-watcher": "^1.1.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.45.4",
		"svelte-check": "^4.0.0",
		"svelte-sonner": "^1.0.5",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.0.0",
		"tw-animate-css": "^1.3.5",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"wrangler": "^4.14.1"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@motionone/types": "^10.17.1",
		"@payloadcms/graphql": "^3.64.0",
		"@payloadcms/live-preview": "^3.64.0",
		"@payloadcms/richtext-lexical": "^3.64.0",
		"@tanstack/svelte-form": "^1.9.0",
		"@types/lodash": "^4.17.20",
		"bits-ui": "^2.8.12",
		"clsx": "^2.1.1",
		"embla-carousel-fade": "^8.6.0",
		"embla-carousel-svelte": "^8.6.0",
		"lexical": "^0.31.0",
		"lodash-es": "^4.17.21",
		"lucide": "^0.503.0",
		"motion": "^12.23.24",
		"next": "15.4.8"
	}
}
